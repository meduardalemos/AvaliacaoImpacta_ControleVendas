@model ControleVendas.Models.Funcionario

@{
    ViewData["Title"] = "Create";
}

<h2>Cadastrar novo funcionário</h2>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Cpf" class="control-label"></label>
                        <input asp-for="Cpf" class="form-control" />
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Senha" class="control-label"></label>
                        <input asp-for="Senha" class="form-control" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Salario" class="control-label"></label>
                        <input asp-for="Salario" class="form-control" />
                        <span asp-validation-for="Salario" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DataAdmissao" class="control-label"></label>
                        <input asp-for="DataAdmissao" class="form-control" />
                        <span asp-validation-for="DataAdmissao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="NivelAcessoId" class="control-label"></label>
                        <input asp-for="NivelAcessoId" class="form-control" />
                        <span asp-validation-for="NivelAcessoId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Cadastrar novo funcionário" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-warning white-text">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
