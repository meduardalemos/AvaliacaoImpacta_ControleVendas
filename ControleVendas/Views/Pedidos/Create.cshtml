@model ControleVendas.Models.Pedido

@{
    ViewData["Title"] = "Create";
}

<h2>Cadastrar novo pedido</h2>

<hr />
<div class="row">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Produto_Id" class="control-label"></label>
                        <input asp-for="Produto_Id" class="form-control" />
                        <span asp-validation-for="Produto_Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Cliente_Id" class="control-label"></label>
                        <input asp-for="Cliente_Id" class="form-control" />
                        <span asp-validation-for="Cliente_Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Vendedor_Id" class="control-label"></label>
                        <input asp-for="Vendedor_Id" class="form-control" />
                        <span asp-validation-for="Vendedor_Id" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-warning white-text">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
