@model IEnumerable<ControleVendas.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista de Produtos</h2>

<p>
    <a asp-action="Create">Cadastrar novo produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProdutoID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ProdutoID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ProdutoID">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
