@model IEnumerable<ControleVendas.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between">
    <h2>Lista de produtos</h2>
    <a asp-action="Create" class="btn btn-success">Cadastrar novo produto</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ProdutoID" class="btn btn-warning white-text btn-sm"> <i class="bi bi-pencil-fill"></i> Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ProdutoID" class="btn btn-primary white-text btn-sm"><i class="bi bi-info-circle-fill"></i> Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProdutoID" class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"></i> Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
